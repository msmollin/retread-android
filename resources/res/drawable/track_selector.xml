<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/connect_page_switch_track"/>
            <corners android:radius="50dp"/>
            <size android:height="24dp" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/connect_page_switch_track"/>
            <corners android:radius="50dp"/>
            <size android:height="24dp" android:width="2dp"/>
        </shape>
    </item>
</selector>

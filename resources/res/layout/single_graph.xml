<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/bg_color" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="@color/bg_color">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/friends_specific_graph_views" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginStart="25dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <androidx.cardview.widget.CardView android:layout_width="120dp" android:layout_height="25dp" android:layout_marginEnd="25dp" app:cardBackgroundColor="@color/average_speed_graph_bg" app:cardCornerRadius="10dp" app:cardElevation="0dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/friends_specific_graph_views" app:layout_constraintTop_toTopOf="0">
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:textSize="13sp" android:textColor="#989898" android:id="@+id/avg_speed_label_graph" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Avg Speed: " android:fontFamily="@font/proximanova_regular" android:layout_marginStart="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <TextView android:textSize="13sp" android:textColor="@color/white" android:id="@+id/avg_speed_number_graph" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/proximanova_bold" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/avg_speed_label_graph" app:layout_constraintTop_toTopOf="0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <com.github.mikephil.charting.charts.LineChart android:id="@+id/graph_view" android:layout_width="360dp" android:layout_height="180dp" android:layout_marginTop="14dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/friends_specific_graph_views"/>
            <TextView android:textSize="13sp" android:textColor="@color/graph_axis_title" android:id="@+id/graph_xaxis_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TIME" android:fontFamily="@font/proximanova_regular" app:layout_constraintEnd_toEndOf="@+id/graph_view" app:layout_constraintStart_toStartOf="@+id/graph_view" app:layout_constraintTop_toBottomOf="@+id/graph_view"/>
            <TextView android:textSize="13sp" android:textColor="@color/graph_axis_title" android:id="@+id/graph_yaxis_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SPEED" android:rotation="270" android:fontFamily="@font/proximanova_regular" app:layout_constraintBottom_toBottomOf="@+id/graph_view" app:layout_constraintEnd_toStartOf="@+id/graph_view" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/graph_view"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

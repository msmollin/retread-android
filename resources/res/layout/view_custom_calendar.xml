<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageButton android:id="@+id/activity_main_pager_button_left_arrow" android:background="@color/clear" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/tall_arrow_left" android:scaleType="fitCenter" android:layout_centerVertical="true" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginStart="10dp" android:layout_alignParentStart="true"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/activity_main_pager_text_month" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Month" android:layout_centerInParent="true" android:fontFamily="@font/proximanova_regular"/>
        <ImageButton android:id="@+id/activity_main_pager_button_right_arrow" android:background="@color/clear" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/tall_arrow_right" android:scaleType="fitCenter" android:layout_centerVertical="true" android:paddingStart="12dp" android:paddingEnd="12dp" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.treadly.Treadly.UI.ThirdParty.Calendar.views.WrapContentViewPager android:id="@+id/activity_main_view_pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/view_calendar_month_layout_days" android:background="@color/transparent" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Sun" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Mon" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Tue" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Wed" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Thu" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Fri" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
        <TextView android:textSize="14sp" android:textColor="@color/activity_calendar_weekday_text" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="Sat" android:layout_weight="1" android:fontFamily="@font/proximanova_regular"/>
    </LinearLayout>
    <GridLayout android:id="@+id/view_calendar_month_grid" android:background="@color/transparent" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>

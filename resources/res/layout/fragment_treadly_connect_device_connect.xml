                <TextView android:id="@+id/directions_one" android:background="@drawable/directions_pairing_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="31dp" android:layout_marginStart="50dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/pair_title"/>

                <TextView android:id="@+id/directions_two" android:background="@drawable/directions_pairing_two" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginStart="45dp" android:layout_marginEnd="15dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/estop_pairing"/>
                <TextView android:id="@+id/pairing_list_info" android:background="@drawable/pairing_list_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="27dp" app:layout_constraintStart_toStartOf="@+id/directions_two" app:layout_constraintTop_toBottomOf="@+id/directions_two"/>
                <ListView android:id="@+id/device_connect_list_view" android:layout_width="match_parent" android:layout_height="140dp" android:divider="@null" android:dividerHeight="0dp" app:layout_constraintTop_toBottomOf="@+id/pairing_list_info"/>
                <Button android:id="@+id/skip_button" android:background="@drawable/skip_button" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/device_connect_list_view"/>
                <Button android:id="@+id/scan_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
